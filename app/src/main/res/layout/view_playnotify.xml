<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="horizontal">

  <ImageView
    android:id="@+id/view_notify_img"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@mipmap/ic_launcher"/>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="4dp">

        <TextView
          android:id="@+id/view_notify_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:text="Leaves in the Wind"
          android:textColor="@android:color/black"
          android:textSize="16sp"/>

        <TextView
          android:id="@+id/view_notify_subtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:text="lsaac Shepard"
          android:textColor="#666"
          android:textSize="14sp"/>


      </LinearLayout>

      <ImageView
        android:id="@+id/view_notify_closes"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/ic_close"/>

    </LinearLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="@color/linecolor"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/view_notify_upbtn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:src="@drawable/ic_up"/>

      <ImageView
        android:id="@+id/view_notify_pause$playbtn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:src="@drawable/ic_pause"/>

      <ImageView
        android:id="@+id/view_notify_nextbtn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:src="@drawable/ic_next"/>

      <ImageView
        android:id="@+id/view_notify_lovebtn"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:src="@drawable/ic_love"/>

    </LinearLayout>

  </LinearLayout>
</LinearLayout>