<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerIntroduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 进入按钮以及当前页面标识 -->
    <LinearLayout
        android:id="@+id/linearLayoutFlag"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonUseApp"
            android:layout_gravity="center_horizontal"
            android:alpha="0"
            android:background="@drawable/my_button_style"
            android:visibility="gone"
            android:text="@string/useNow"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <!-- 下面这个是用来标记当前华东到哪一个页面的 -->
        <LinearLayout
            android:id="@+id/linearLayoutFlagContent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="1dp">
            <View
                android:background="@android:color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>